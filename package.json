    "devDependencies": {
        "@types/compression": "^1.7.2",
        "@types/cors": "^2.8.12",
        "@types/date-fns": "^2.6.0",
        "@types/express": "^4.17.13",
        "@types/morgan": "^1.9.3",
        "@types/node": "^16.11.38",
        "@types/node-fetch": "^2.6.1",
        "@types/node-telegram-bot-api": "^0.57.1",
        "@types/request-promise-native": "^1.0.18",
        "@types/ua-parser-js": "^0.7.36",
        "husky": "^8.0.1",
        "lint-staged": "^13.0.0",
